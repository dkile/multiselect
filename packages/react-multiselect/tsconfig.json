{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "multiselect-core": ["../multiselect-core/src"],
      "multiselect-core/*": ["../multiselect-core/src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src"]
}
